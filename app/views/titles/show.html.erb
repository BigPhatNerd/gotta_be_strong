<div class="booyah-box col-12">
    <h1>
        <%= @title.title %>
    </h1>
    <div id="show-when-small">
        <h3 class="text-center"> Your screen is too small.<br />
            Flip to landscape mode to view workout</h3>
    </div>
    <div id="hide-when-small">
        <div class="container">
            <table class="table table-striped">
                <thead>
                    <div class="row">
                        <div class="col-1">
                            <tr>
                                <th>
                                    <p> Movement</p>
                                </th>
                        </div>
                        <div class="col-1">
                            <th>
                                <p class="text-center">Sets</p>
                            </th>
                        </div>
                        <div class="col-1">
                            <th>
                                <p class="text-center">Reps</p>
                            </th>
                        </div>
                        <div class="col-1">
                            <th>
                                <p class="text-center"> Intensity</p>
                            </th>
                        </div>
                        <div class="col-1">
                            <th>
                                <p class="text-center"> Load</p>
                            </th>
                        </div>
                        <div class="col-1">
                            <th>
                                <p class="text-center">Tempo</p>
                            </th>
                        </div>
                        <div class="col-1">
                            <th>
                                <p class="text-center">Rest</p>
                            </th>
                        </div>
                    </div>
                    </tr>
                </thead>
                <tbody>
                    <% @title.programs.each do |program| %>
                    <div class="row">
                        <div class="col-1">
                            <tr>
                                <td>
                                    <p>
                                        <%= program.exercise %>
                                    </p>
                                </td>
                        </div>
                        <div class="col-1 text-center">
                            <td>
                                <p class="text-center">
                                    <%= program.sets %>
                                </p>
                            </td>
                        </div>
                        <div class="col-1">
                            <td>
                                <p class="text-center">
                                    <%= program.reps %>
                                </p>
                            </td>
                        </div>
                        <div class="col-1">
                            <td>
                                <p class="text-center">
                                    <% if program.intensity.nil? %>
                                    <% ""%>
                                    <% else %>
                                    <%= program.intensity%>%
                                    <% end %>
                                </p>
                            </td>
                        </div>
                        <div class="col-1">
                            <td>
                                <p class="text-center">
                                    <% if program.intensity.nil? %>
                                    <%= "-" %>
                                    <% elsif program.exercise.include? "quat"  %>
                                    <%= (@max_weight.max_squat * (program.intensity * 0.01)).to_i %>lbs.
                                    <% elsif program.exercise.include? "Bench" %>
                                    <%= (@max_weight.max_bench * (program.intensity * 0.01)).to_i %>lbs.
                                    <% elsif program.exercise.include? "Dead" %>
                                    <%= (@max_weight.max_deadlift * (program.intensity * 0.01)).to_i %>lbs.
                                    <% elsif program.intensity.present?  && program.intensity < 20 %>
                                    <%= program.intensity%>RPE
                                    <% elsif program.intensity.nil? %>
                                    <% "-" %>
                                    <% else %>
                                    <%= "" %>
                                    <% end %>
                                </p>
                            </td>
                        </div>
                        <div class="col-1">
                            <td>
                                <p class="text-center">
                                    <%= program.tempo %>
                                </p>
                            </td>
                        </div>
                        <div class="col-1">
                            <td>
                                <p class="text-center">
                                    <%= program.rest %> secs
                                </p>
                            </td>
                        </div>
                        </tr>
                    </div>
                    <% end %>
                </tbody>
            </table>
        </div>
        <br />
        <div class="text-center">
            <%= link_to 'Back to Program', titles_path, class: 'btn btn-success btn-large' %>
        </div>
        <br />
        <br />
    </div>
</div>
