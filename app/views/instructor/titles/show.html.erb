<div class="booyah-box col-10 offset-1">
    <h1 class="text-center">
        <%=@title.title%>
    </h1>
    <br />
    <br class="clr" />
    <div class="text-center">
        <%= link_to 'Add movements to workout', new_instructor_title_program_path(@title), class: 'btn btn-primary btn-lg' %>
    </div>
    <br />
    <br />
    <br class="clr" />
    <div class=" text-center">
        <%= link_to 'Edit Title', edit_instructor_title_path(@title), class: 'btn btn-primary btn-large' %>
    </div>
    <br class="clr" />
    <div class="text-center">
        <%= link_to 'Destroy', instructor_title_path(@title), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
    </div>
    <br />
    <div class="text-center">
        <%= link_to 'All Titles', instructor_titles_path, class: 'btn btn-primary btn-lg' %>
    </div>
    <div class="container">
        <table class="table table-striped">
            <thead>
                <div class="row">
                    <div class="col-2">
                        <tr>
                            <th>
                                <h3> Movement</h3>
                            </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center">Sets</h3>
                        </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center">Reps</h3>
                        </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center"> Intensity</h3>
                        </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center">Tempo</h3>
                        </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center">Rest</h3>
                        </th>
                    </div>
                </div>
                </tr>
            </thead>
            <tbody>
                <% @title.programs.each do |program| %>
                <div class="row">
                    <div class="col-1">
                        <tr>
                            <td>
                                <h3>
                                    <%= program.exercise %>
                                </h3>
                            </td>
                    </div>
                    <div class="col-1 text-center">
                        <td>
                            <h3 class="text-center">
                                <%= program.sets %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= program.reps %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= program.intensity %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= program.tempo %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= program.rest %>
                            </h3>
                        </td>
                    </div>
                </div>
                </tr>
                <br />
                <br />
                <% end %>
            </tbody>
        </table>
    </div>
</div>