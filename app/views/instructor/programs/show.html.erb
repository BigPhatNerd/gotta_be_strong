<div class="booyah-box col-10 offset-1">
    <h1> Programs show page</h1>
    <h1 class="text-center">
        <%= @program.exercise %>
    </h1>
    <hr />
    <div class="container">
        <table class="table table-striped">
            <thead>
                <div class="row">
                    <div class="col-1">
                        <tr>
                            <th>
                                <h3> Movement</h3>
                            </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center">Sets</h3>
                        </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center">Reps</h3>
                        </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center"> Intensity</h3>
                        </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center">Tempo</h3>
                        </th>
                    </div>
                    <div class="col-1">
                        <th>
                            <h3 class="text-center">Rest</h3>
                        </th>
                    </div>
                </div>
                </tr>
            </thead>
            <tbody>
                <div class="row">
                    <div class="col-1">
                        <tr>
                            <td>
                                <h3>
                                    <%= @program.exercise %>
                                </h3>
                            </td>
                    </div>
                    <div class="col-1 text-center">
                        <td>
                            <h3 class="text-center">
                                <%= @program.sets %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= @program.reps %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= @program.intensity %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= @program.tempo %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= @program.rest %>
                            </h3>
                        </td>
                    </div>
                    <div class="col-1">
                        <td>
                            <h3 class="text-center">
                                <%= link_to 'New Movement', new_instructor_title_program_path(@program), class: 'btn btn-success btn-lg' %>
                            </h3>
                        </td>
                    </div>
                </div>
                </tr>
                <br />
                <br />
    </div>
    <div class="row">
        <div class="col-12">
            <div class="text-center">
                <%= link_to 'Edit Movement', edit_instructor_program_path(@program), class: 'btn btn-success btn-lg' %>
            </div>
        </div>
    </div>
</div>