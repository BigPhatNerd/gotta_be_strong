<div class="booyah-box col-10 offset-1">
    <h1 class="text-center">Max Weights</h1>
    <hr />
    <h2 class="text-center">
        Date Entered:
        <%= @max_weight.created_at.strftime("%m-%d-%Y") %>
        <br />
        <br />
        Max Bench:
        <%= @max_weight.max_bench %>
        <br />
        Max Squat:
        <%= @max_weight.max_squat %>
        <br />
        Max Deadlift:
        <%= @max_weight.max_deadlift %>
    </h2>
    <br class="clr" />
    <div class=" text-center">
        <%= link_to 'Edit Max', edit_max_weight_path(@max_weight), class: 'btn btn-success btn-large' %>
    </div>
    <br class="clr" />
    <div class="text-center">
        <%= link_to 'Destroy', max_weight_path(@max_weight), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
    </div>
    <br />
    <div class="text-center">
        <%= link_to 'Workouts', titles_path, class: 'btn btn-success' %>
    </div>